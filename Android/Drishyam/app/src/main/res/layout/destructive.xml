<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:wheel="http://schemas.android.com/apk/res-auto"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/material_blue_grey_800"
tools:context="com.geetaanjali.drishyam.Destructive"
tools:ignore="MergeRootFrame" >



<com.balysv.materialripple.MaterialRippleLayout
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</com.balysv.materialripple.MaterialRippleLayout>


    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e69310"
    android:text="Set Name"
    android:id="@+id/mahadev_name"
    android:layout_alignTop="@+id/mahadev_email"
    android:layout_alignLeft="@+id/mahadev_text"
    android:layout_alignStart="@+id/mahadev_text"
    android:onClick="editName"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#80bebebe"
    android:text="Email(s)"
    android:id="@+id/mahadev_email"
    android:layout_above="@+id/linear"
    android:layout_toRightOf="@+id/linear"
    android:layout_toEndOf="@+id/linear"
    android:onClick="editEmails" />

<com.pnikosis.materialishprogress.ProgressWheel
    android:id="@+id/linear"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    wheel:matProg_barColor="#000000"
    wheel:matProg_rimColor="#e69310"
    wheel:matProg_barWidth="13dp"
    wheel:matProg_rimWidth="13dp"
    wheel:matProg_spinSpeed="0.64"
    wheel:matProg_fillRadius="true"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#80bebebe"
    android:text="Text"
    android:id="@+id/mahadev_text"
    android:layout_below="@+id/linear"
    android:layout_toLeftOf="@+id/linear"
    android:layout_toStartOf="@+id/linear"
    android:onClick="editText" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e69310"
    android:text="Time Limit"
    android:id="@+id/mahadev_time"
    android:layout_below="@+id/linear"
    android:layout_alignLeft="@+id/mahadev_email"
    android:layout_alignStart="@+id/mahadev_email"
    android:onClick="editTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Submit: Macavity to mishra.coolamon@gmail.com,almightyamon@hotmail.com,krishna.pankanchanophas550@gmail.com"
        android:drawableRight="@drawable/ic_action_send_now_light"
        android:id="@+id/btnMorph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ripple" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:textStyle="normal|bold|italic"
        android:foregroundGravity="center"
        android:text="Self Destructive Doc"
        android:id="@+id/textView2"
        android:textSize="32sp"
        android:shadowColor="#7000"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:layout_below="@+id/ripple"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>